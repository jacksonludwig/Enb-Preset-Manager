  bool ENABLE_SPLITSCREEN < string UIName = "Enable Split Screen1"; > = {false};
    float fSplitPos < string UIName="Split Screen: Position X";    string UIWidget="Spinner";  float UIMin=0.0;  float UIMax=1.0;  float UIStep=0.05;  > = {0.5};
  bool ENABLE_CLIPMODE < string UIName = "Visualize Color Clipping"; > = {false};
  bool SHOW_DEPTH < string UIName = "Visualize Depth"; > = {false};
    int fDevDepth < string UIName="DEPTH: Variable";  string UIWidget="Spinner";  int UIMin=0; > = {1000};


