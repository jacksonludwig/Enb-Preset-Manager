// PIXEL SHADERS
float4 msDevelopmentTools(float4 color, float2 txcoord0, Texture2D TexColor) {
    color.rgb = lerp(color.rgb, ClipMode(color.rgb), ENABLE_CLIPMODE);                                          // Show which pixels are over- and under-exposed.
    color.rgb = lerp(color.rgb, ShowDepth(color.rgb, TextureDepth, txcoord0.xy, 0.5f, fDevDepth), SHOW_DEPTH);  // Show depth buffer
    color = lerp(color, SplitScreen(TexColor.Sample(Sampler0, txcoord0.xy), color, txcoord0.xy, fSplitPos), ENABLE_SPLITSCREEN);

  return color;
}
